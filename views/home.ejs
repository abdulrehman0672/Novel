    <script>
        // Toggle mobile menu
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Show reading section when "Read" button is clicked
        document.querySelectorAll('[class*="hover:bg-blue-200"]').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('reading-section').classList.remove('hidden');
                document.querySelector('header').classList.add('hidden');
                document.querySelectorAll('section:not(#reading-section)').forEach(section => {
                    section.classList.add('hidden');
                });
                document.querySelector('footer').classList.add('hidden');
                window.scrollTo(0, 0);
            });
        });

        // Back button functionality
        document.getElementById('back-button').addEventListener('click', function() {
            document.getElementById('reading-section').classList.add('hidden');
            document.querySelector('header').classList.remove('hidden');
            document.querySelectorAll('section:not(#reading-section)').forEach(section => {
                section.classList.remove('hidden');
            });
            document.querySelector('footer').classList.remove('hidden');
        });
